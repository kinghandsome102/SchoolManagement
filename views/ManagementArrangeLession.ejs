<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('Managementinclude/head.ejs') %>
    <title>Teacher arrange lession</title>
    <script src="js/ManagementArrangeLession.js"></script>
</head>
<body>
    <%- include('Managementinclude/navigation.ejs') %>

    <div class="container">
        <div class="mt-2">
            <select class="form-select mb-2" aria-label="Default select example" id="ArrangeOrShowsalary" onchange="arrangeOrShow()">
                <option selected>-</option>
                <option value="1">Sắp xếp lịch học</option>
                <option value="2">Thông tin giáo viên</option>
            </select>
        </div>
        <div class="row justify-content-between" style="display: none;" id ="ShowTeacherSalary">
            <div class="col-12">
                <table class="table table-bordered align-middle">
                    <thead class="align-middle">
                        <tr>
                            <th>ID</th>
                            <th>Tên giáo viên</th>
                            <th>Chuyên môn</th>
                        </tr>
                    </thead>
                    <tbody class="table-bordered">
                        <% teacherData.forEach((element, index) => { %>
                         <tr>
                            <td>1<%= element.TeacherID %></td>
                            <td>
                                <% var id = element.TeacherID %>
                                <a href="/<%= id %>"><%= element.TeacherName %>
                                </a>
                            </td>
                            <td><%= element.ObjectName %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row justify-content-between" style="display: none;" id="ShowArangeLession">
            <div class="col-12">
                <table class="table table-bordered align-middle">
                    <thead class="align-middle">
                        <tr>
                            <th>ID</th>
                            <th>Tên giáo viên</th>
                            <th>Môn giảng dạy</th>
                            <th>Tổng số tiết dạy</th>
                            <th>Số tiết dạy thêm</th>
                            <th>Số tiền chi</th>
                        </tr>
                    </thead>
                    <tbody class="ShowSalary">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>